{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./build/",
        "rootDir": "./src/",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "target": "ES2019",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "types": ["node"],
    "exclude": ["node_modules", "**/node_modules/*", "build", "demo", "examples"]
}
