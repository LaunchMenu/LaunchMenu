{
    "name": "launch-menu",
    "version": "0.0.0",
    "description": "A applet environment for visual keyboard controlled applets",
    "types": "build/index.d.ts",
    "files": [
        "build/**/*.{js,d.ts}"
    ],
    "main": "build/index.js",
    "scripts": {
        "build": "webpack --env prod",
        "dev": "webpack-dev-server --env dev --watch",
        "start": "set NODE_ENV=production&& electron build/index.js",
        "dist": "electron-builder",
        "test": "jest -i",
        "test-watch": "jest --watch -i",
        "test-watch-debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch --config=\"jest.config.js\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LaunchMenu/LaunchMenu.git"
    },
    "keywords": [
        "React",
        "LaunchMenu",
        "Applet"
    ],
    "author": "Tar van Krieken",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/LaunchMenu/LaunchMenu/issues"
    },
    "homepage": "https://github.com/LaunchMenu/LaunchMenu#readme",
    "build": {
        "appId": "com.electron.launchmenu",
        "productName": "LaunchMenu",
        "files": [
            "build/**/*"
        ],
        "directories": {
            "buildResources": "build",
            "output": "dist",
            "app": "."
        }
    },
    "dependencies": {
        "react": "^16.13.0",
        "react-dom": "^16.13.0"
    },
    "devDependencies": {
        "@snowpack/app-scripts-react": "^1.2.0",
        "@testing-library/jest-dom": "^5.5.0",
        "@testing-library/react": "^10.0.3",
        "@types/jest": "^26.0.0",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "concurrently": "^5.2.0",
        "copy-webpack-plugin": "^6.0.2",
        "electron": "^9.0.4",
        "electron-builder": "^22.7.0",
        "file-loader": "^6.0.0",
        "jest": "^26.0.1",
        "nodemon": "^2.0.4",
        "nodemon-webpack-plugin": "^4.3.2",
        "ts-jest": "^26.1.0",
        "ts-loader": "^7.0.5",
        "typescript": "^3.8.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "webpack-fix-default-import-plugin": "^1.0.3",
        "write-file-webpack-plugin": "^4.5.1"
    }
}
